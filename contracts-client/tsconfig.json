{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true,
        "declaration": true,
        "target": "es6",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "sourceMap": true,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": ["./src"],
    "exclude": [
        "node_modules"
    ]
}
